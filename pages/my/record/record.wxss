/* pages/my/record/record.wxss */
.head{
  padding-top: 10rpx;
  color: #666;
  text-align: center;
}
.card {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  box-shadow: 0 10rpx 15rpx #ddd;
  border-radius: 10rpx;
  margin: 20rpx 40rpx 40rpx 40rpx;
  padding: 20rpx 30rpx 20rpx 5rpx;
  color: #444;
}
.content {
  flex: 3;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
}
#date{
  font-size: 25rpx;
  color: #888;
}
.iconArea {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.icon {
  width: 80rpx;
  height: 80rpx;
}