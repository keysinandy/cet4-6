<!--pages/index/daily/daily.wxml-->
<view class='daily'>
  <view class='navbar'>
    <view class='inner'>
        <view class='{{itemstyle1}}' bindtap='changestyle' data-index = "a">四级</view>
        <view class='{{itemstyle2}}' bindtap='changestyle' data-index = "b">六级</view>
    </view>
  </view>

<!-- 内容 -->
<view class='content'>
<!-- title -->
  <view class='title'>
   <image src="https://sanleisen.cn/photo/CET/icons/task.png" style="margin-right: 10px;vertical-align: middle;width:30px; height: 30px;"></image>
    {{title}}排行榜
  </view>
</view>
</view> 



<view class="page">
    <view class="page__bd">
        <view class="weui-cells weui-cells_after-title">
        <!-- 前三名 -->
                <view class="weui-cell weui-three" wx:for="{{userInfo1}}">
                <view class="weui-cell__hd">
                <view class='champions'>
                 <image src='https://sanleisen.cn/photo/CET/icons/{{index+1}}.png' class='championImage'></image>
                </view>
                    <image src="{{item.avatar}}" style="margin-right: 20px;vertical-align: middle;width:60px; height: 60px; border-radius: 50%;"></image>
                </view>
                <view class="weui-cell__bd">
                  <view class='theusername'>{{item.username}}</view>
                </view>
                <view class="weui-cell__ft">{{item.score}}</view>
            </view>
          

        <!-- 除了全三名之外的排行榜 -->
            <view class="weui-cell weui-rest" wx:for="{{userInfo2}}">
                <view class="weui-cell__hd">
                <view class='num'>
                 <image src="https://sanleisen.cn/photo/CET/icons/sun2.png"  class='sun'></image>
                  <view  class='number'>{{index+4}}</view>
                </view>
                    <image src="{{item.avatar}}" style="margin-right: 20px;vertical-align: middle;width:85rpx; height: 85rpx;border-radius: 50%"></image>
                </view>
                <view class="weui-cell__bd">
                  <view class='theusername'>{{item.username}}</view>
                </view>
                <view class="weui-cell__ft">{{item.score}}</view>
            </view>
          
        </view>
    </view>
</view>