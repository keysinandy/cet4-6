/* pages/settings/settings.wxss */
page{
  background-color: #f2f2f2;
}

.listInfo {
  flex: 3;
  font-size: 31rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #777;
}
.listCont {
  position: relative;
  flex: 9;
  text-align: right;
  font-size: 31rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #777;
  justify-self: right;
}
.listIcon {
  flex: 1;
  text-align: right;
  font-size: 31rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #ccc;
}
.list {
  border-width: 0rpx 0rpx 3rpx 0rpx;
  border-style: solid;
  border-color: #f6f6f6;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  margin: 0rpx 40rpx 0rpx 40rpx;
}
.avatar {
  position: absolute;
  right: 0;
  height: 100rpx;
  width: 100rpx;
}
.listImg {
  height: 60rpx;
  width: 60rpx;
  margin: 15rpx 50rpx 0rpx 0rpx;
}

